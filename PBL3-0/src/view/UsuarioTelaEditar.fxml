                        <Insets right="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="300.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="50.0" prefWidth="300.0" styleClass="labelInformativa" text="Confirmar nova senha" />
                        <PasswordField fx:id="campoNovaSenha2" alignment="CENTER" prefHeight="50.0" promptText="Confirme a nova senha" styleClass="receberInformacao" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="142.0" prefWidth="700.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#botaoConfirmarEdicao" prefHeight="40.0" prefWidth="250.0" text="Confirmar novas informações">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="botao" />
                        <String fx:value="mouseOn" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#botaoCancelar" prefHeight="40.0" prefWidth="250.0" text="Cancelar ">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                     <styleClass>
                        <String fx:value="botao" />
                        <String fx:value="mouseOn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
