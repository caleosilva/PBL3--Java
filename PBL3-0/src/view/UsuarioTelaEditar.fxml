<AnchorPane prefHeight="450.0" prefWidth="700.0" styleClass="root" stylesheets="@../style/TelaDeOperacoes.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.views.UsuarioTelaEditarController">
